{
  "name": "amazon-scout",
  "version": "1.0.0",
  "description": "Browser extension for Amazon",
  "dependencies": {
    "lodash": "^4.17.21",
    "npm-run-all": "^4.1.5",
    "node-sass-chokidar": "^1.4.0",
    "prop-types": "^15.7.2",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-redux": "^6.0.1",
    "react-scripts": "^3.3.0",
    "redux": "^4.0.5",
    "redux-persist": "^6.0.0"
  },
  "devDependencies": {
    "@types/classnames": "2.2.9",
    "@types/chrome": "^0.0.91",
    "@types/node": "^13.1.5",
    "@types/react": "^16.9.17",
    "@types/react-dom": "^16.9.4",
    "@types/react-redux": "7.1.5",
    "@types/react-router": "5.1.4",
    "@types/react-router-dom": "5.1.3",
    "typescript": "3.7.4"
  },
  "scripts": {
    "start": "npm-run-all -p watch-css start-js",
    "build": "npm-run-all build-css build-js",
    "start-js": "react-scripts start",
    "build-js": "react-scripts build",
    "build-css": "node-sass-chokidar public/sass/bulma.sass -o public/css/ --output-style compressed",
    "watch-css": "npm run build-css && node-sass-chokidar public/sass/bulma.sass -o public/css/ -w",
    "eject": "react-scripts eject",
    "test": "react-scripts test"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
